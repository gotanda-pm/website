root = true

[*]
charset                  = utf8
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true

[*.md]
indent_style = space
indent_size  = 4

[*.js]
indent_style = space
indent_size  = 2

[*.json]
indent_style = space
indent_size  = 2

[*.scss]
indent_style = space
indent_size  = 2

[*.yml]
indent_style = space
indent_size  = 2

[*.tx]
indent_style = space
indent_size  = 2


